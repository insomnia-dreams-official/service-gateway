# Structure for site's navigation
# pages new/sale... <- manully defined pages
# pages for categories of first and second hierarchy's levels <- pages corresponding to table: "category"
# Example category's path is 1 or 2.3
type NavigationItem {
    id: String! # manually set number for new/sale items and articul for categories
    name: String!
    link: String!
    items: [NavigationItem]
}

type Query {
    navigation: [NavigationItem!]!
}
